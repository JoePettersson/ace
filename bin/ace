#!/usr/bin/env node

var vm   = require('vm'),
    path = require('path'),
    fs   = require('fs'),
    strata = require('strata'),
    argv = process.argv.slice(2),
    App  = require('../lib/app');

require('../lib/ext');
require('../lib/helpers');

try {
  require('coffee-script');
} catch(e) { }

filename = argv[0];

if ( !filename ) {
  console.log("Ace usage:");
  console.log("\tace PATH");
  return;
}

filename = path.resolve(filename);
process.chdir(path.dirname(filename))

var app = new App;
global.app = app;
require(filename);
app.serve();